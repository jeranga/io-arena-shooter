{
  "name": "io-arena-shooter",
  "version": "1.0.0",
  "description": "MVP .io Arena Shooter - Browser-based multiplayer arena shooter",
  "main": "server/index.js",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "vite client --watch",
    "build": "vite build client",
    "start": "npm run build && node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:core": "jest tests/core/",
    "test:weapons": "jest tests/weapons/",
    "test:collision": "jest tests/collision/",
    "test:upgrades": "jest tests/upgrades/",
    "test:loot": "jest tests/loot/",
    "test:integration": "jest tests/integration/",
    "test:unit": "jest --testPathIgnorePatterns='tests/integration/'",
    "test:quick": "jest --testTimeout=5000",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "game",
    "multiplayer",
    "arena",
    "shooter",
    "io"
  ],
  "author": "",
  "license": "MIT"
}
